<h1 align="center">Your Daily List</h1>

<% if @meals.blank? %>
  <p style="color:red">User hasn't eaten anything today</p>
<% else %>
  <% if @meals.inject(0){|sum,x| sum + x.calories} < current_user.daily_calories %>
    <%= render 'listing', meals: @meals, user: current_user, color: "green" %>
  <% else  %>
    <%= render 'listing', meals: @meals, user: current_user, color: "red" %>
  <% end %>
<% end %>

<%= link_to 'Add Meal', new_meal_path,
                              class: "btn btn-xs btn-success" %>
